<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Interactive Chess Game</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* Chessboard Styling */
        .chessboard {
            display: grid;
            grid-template-columns: repeat(8, 1fr);
            grid-template-rows: repeat(8, 1fr);
            width: 100%;
            height: 100%;
            max-width: 500px;
            max-height: 500px;
            border: 2px solid #444;
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.5);
            overflow: hidden;
            border-radius: 12px;
            animation: fadeIn 1s ease-in-out;
        }

        /* Light and Dark Squares */
        .square.light {
            background: linear-gradient(145deg, #f4e2d8, #e5c7a9);
        }
        .square.dark {
            background: linear-gradient(145deg, #8a6d4f, #715538);
        }

        /* Hover Effect on Squares */
        .square:hover {
            box-shadow: inset 0 0 10px rgba(255, 255, 255, 0.5);
            transition: box-shadow 0.3s ease-in-out;
        }

        /* Chess Piece Styling */
        .piece {
            font-size: 40px;
            cursor: grab;
            user-select: none;
        }

        /* Flip board for player 2 */
        .flipped {
            transform: rotate(180deg);
        }

        /* Responsive Layout for Chessboards */
        .chessboards-container {
            display: flex;
            justify-content: center;
            gap: 10px;
            flex-wrap: wrap;
            overflow-x: auto;
            overflow-y: hidden;
            margin-bottom: 20px;
        }

        /* Mobile-friendly layout */
        @media (max-width: 768px) {
            .chessboards-container {
                flex-direction: column;
                align-items: center;
            }
            .chessboard {
                width: 90vw;
                height: 90vw;
            }
        }

        /* Background Styling */
        body {
            background: linear-gradient(to bottom right, #3b3b3b, #1a1a1a);
            font-family: Arial, sans-serif;
        }

        h1 {
            color: white;
            font-size: 2.5rem;
            text-align: center;
            margin-bottom: 20px;
        }

        /* Container for Chessboards */
        .game-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap: 30px;
            padding: 40px;
        }
    </style>
</head>
<body class="h-screen flex items-center justify-center">

    <!-- Main Game Container -->
    <div class="game-container">
        <h1 class="text-white">Interactive Chess Game</h1>
        <!-- Two chessboards container -->
        <div class="chessboards-container">
            <div class="chessboard" id="board1"></div>
            <div class="chessboard" id="board2"></div>
        </div>
    </div>

    <script src="https://cdn.socket.io/4.7.5/socket.io.min.js" 
        integrity="sha384-2huaZvOR9iDzHqslqwpR87isEmrfxqyWOF7hr7BY6KG0+hVKLoEXMPUJw3ynWuhO" 
        crossorigin="anonymous"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/chess.js/0.10.3/chess.min.js" 
        integrity="sha512-xRllwz2gdZciIB+AkEbeq+gVhX8VB8XsfqeFbUh+SzHlN96dEduwtTuVuc2u9EROlmW9+yhRlxjif66ORpsgVA==" 
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script src="/js/chessgame.js"></script>
</body>
</html>
